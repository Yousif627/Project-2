<body>
    <h1>Update Coach</h1>
     <form action="/coach/myDetails/<%= coachDetails._id %>?_method=PUT" method="post">
        <label for="name">Coach Name:</label>
        <input type="text" name="name" id="name" value=" <%= coachDetails.name %>">

        <label for="age">Coach Age:</label>
        <input type="number" name="age" id="age" value="<%= coachDetails.age %>">

        <label for="description">Coach description:</label>
        <input type="text" name="description" id="description" value="<%= coachDetails.description %>">

        <button type="submit">Edit coach</button>
    </form>

</body>
</html>